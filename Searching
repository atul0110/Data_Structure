/********************************************************************************************
//LINEAR SEARCH
********************************************************************************************/

#include <iostream>
using namespace std;

int linear_search(int arr[], int data)
{
    int pos=0;
    for(int i=0;i<sizeof(arr);i++){
        if(arr[i]==data){
            pos = i+1;
            break;
        }
    }
    if(pos!=0){
        return pos;
    }
    else{
        return -1;
    }
}

int main()
{
    int arr[5] = {1,2,3,4,5},n,a;
    cout<<"Enter the element you want to search: ";
    cin>>n;
    a = linear_search(arr,n);
    if(a==-1){
        cout<<"Element not found..";
    }
    else{
        cout<<"Element found at position "<<a;
    }
    return 0;
}
