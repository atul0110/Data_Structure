/**********************************************************************************************************************
//BUBBLE SORT
**********************************************************************************************************************/

#include<iostream>
using namespace std;

void bubble_sort(int arr[],int n)
{
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1;j++){
            if(arr[j]>arr[j+1]){
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
    cout<<"\nSorted array:"<<endl;
    for (int i=0;i<n;i++){
        cout<<arr[i]<<"\t";
    }
}

int main()
{
    int arr[10]={32,41,5,7,43,8,41,10,9,99};
    int n = sizeof(arr)/sizeof(arr[0]);
    cout<<"Unsorted array:"<<endl;
    for (int i=0;i<n;i++){
        cout<<arr[i]<<"\t";
    }
    bubble_sort(arr,n);
    return 0;
}


